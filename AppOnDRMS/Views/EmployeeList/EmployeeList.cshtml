
@{
    Layout = "~/Views/Shared/_DRMSLayout.cshtml";
}

<canvas class='connecting-dots' id="experiment"></canvas>
<div class="container">
    <div class="container">
        <div class="wrapper">
            <form action="" method="post" name="Login_Form" class="form-signin">
                <h3 class="form-signin-heading">WEB日報管理システム</h3>

                <h4 class="form-signin-heading">社員一覧</h4>
                <hr class="colorgraph"><br>

                <table class="table table-hover table-striped header-fixed" id="staff_Table">
                    <tbody>
                    </tbody>
                </table>
                <div class="form-group pt-3">
                    <label for="x">出力期間</label>
                    <div class="datechoices input-daterange input-group">

                        <input class="form-control" type="date" id="txt_startDate" value="　" tabindex="2">
                        <div class="input-group-addon">～</div>
                        
                        <input class="form-control" type="date" id="txt_endDate" value="　" tabindex="3">
                    </div>

                    <div class="pt-2 text-center">
                        <button type="button" id="btn_Staff" class="btn btn-outline-secondary btn" tabindex="4">社員別明細出力</button>
                    </div>
                    <h5 class="text-right pt-4">@ViewBag.CompanyName</h5>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script type='text/javascript'>
        $(document).ready(function () {
            //select M_Staff Table list 
            var response = CalltoApiController('@Url.Action("EmployeeList", "api/EmployeeListApi")', null);
            var data = JSON.parse(response);
            if (data.length > 0) {
                SetData(data)
            }

            //get value for radio button 
            var radios = $("input[type=radio]");
            var radio_value = "";
            radios.change(function () {
                radio_value = $(this).val();
            });

            $(window).bind("beforeunload", function () {
                delete_cookie("Admin_Member_ID");
               // return confirm("Do you really want to close?");
            });
            $('#btn_Staff').click(function () {
                if ($("#txt_startDate").val() == "" || $("#txt_endDate").val() == "" || radio_value == "") {
                    alert("入力内容を確認してください")
                }
                else {
                    //print pdf
                }
            })
        });

        function SetData(data) {
            for (var i = 0; i < data.length; i++) {
                $('#staff_Table > tbody:last-child').append('<tr><td><input type="radio" class="' + i + '" name="name_select_one" id="' + data[i].member_id + '" value="' + data[i].member_id + '"  />   ' + data[i].member_name + '</td></tr>');
            }
            $('.0').focus(); $('.0').attr("tabindex", 1);
        }
    function delete_cookie(name) {
        document.cookie = name + '=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
        }
        
    </script>
}
