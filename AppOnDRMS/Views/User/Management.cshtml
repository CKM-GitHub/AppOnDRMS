@model DRMS_Models.UserLoginModel
@{
    Layout = "~/Views/Shared/_DRMSLayout.cshtml";
}
<canvas class='connecting-dots' id="experiment"></canvas>
<div class="container">
    <div class="container">
        <div class="wrapper">
            <form action="" method="post" name="Login_Form" class="form-signin kanri">
                <h3 class="form-signin-heading">WEB日報管理システム</h3>

                <h4 class="form-signin-heading">管理</h4>
                <hr class="colorgraph"><br>

                <div class="row">
                    <div class="col-4">
                        <button type="button" id="btn_ConstructionList" class="btn btn-outline-success btn-lg btn-block">工事別明細出力</button>
                    </div>
                    <div class="col-4">
                        <button type="button" id="btn_ShainList" class="btn btn-outline-danger btn-lg btn-block">社員別明細出力</button>
                    </div>
                    <div class="col-4">
                        <button type="button" class="btn btn-outline-warning btn-lg btn-block">各マスタ・設定</button>
                    </div>
                </div>
                <div class="pt-5 text-right">
                    <button type="button" id="btn_Exit" class="btn btn-outline-secondary btn">終了 EXIT</button>
                </div>
                <h5 class="text-right pt-4">@Model.company_name</h5>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
    <script type='text/javascript'>
        $(document).ready(function () {
            let bl_Check = "false";

            $('#btn_ConstructionList').click(function () {
                bl_Check = "true";
                window.location.href = '@Url.Action("ConstructionList", "ConstructionList")';
            })
            $('#btn_ShainList').click(function () {
                bl_Check = "true";
                window.location.href = '@Url.Action("EmployeeList", "EmployeeList")';
            })
            $('#btn_Exit').click(function () {
                window.location.href =  '@Url.Action("UserLogin", "User")';
            })
            $(window).bind("beforeunload", function (e) {
                if (bl_Check != "true") {
                    delete_cookie("Admin_Member_ID");
                }
                // return confirm("Do you really want to close?");
            });

            //$(window).bind("unload", function () {
            //    if (bl_Check != "true") {
            //        delete_cookie("Admin_Member_ID");
            //    }
            //});
        });
        function delete_cookie(name) {
            document.cookie = name + '=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
        }


    </script>
}

