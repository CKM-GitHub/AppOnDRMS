@model DRMS_Models.ConstructionListModel
@{
    ViewBag.Title = "ConstructionList";
    Layout = "~/Views/Shared/_DRMSLayout.cshtml";
}

<canvas class='connecting-dots' id="experiment"></canvas>
<div class="container">
    <div class="container">
        <div class="wrapper">
            <form action="" method="post" name="Login_Form" class="form-signin">
                <h3 class="form-signin-heading">WEB日報管理システム</h3>

                <h4 class="form-signin-heading">工事一覧</h4>
                <hr class="colorgraph"><br>

                <table id="tblConstruction" class="table table-hover table-striped header-fixed">
                    <tbody>
                    </tbody>
                </table>
                <div class="form-group pt-3">
                    <label for="x">出力期間</label>
                    <div class="datechoices input-daterange input-group">
                        <input class="form-control" id="txtstartDate" type="date" value="　">
                        <div class="input-group-addon">～</div>
                        <input class="form-control" id="txtendDate" type="date" value="　">
                    </div>
                    <div class="pt-2 text-center">
                        <button type="button" id="btn" class="btn btn-outline-secondary btn">工事別明細出力</button>
                    </div>
                    <h5 class="text-right pt-4">山本建設株式会社</h5>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function (e) {
            debugger;
            window.rdovalue = '';
            var response = CalltoApiController('@Url.Action("GetPrjData", "api/ConstructionListAPI")');
            BindData(JSON.parse(response));

            $('#btn').click(function () {
                if ($("#txtstartDate").val() == "" || $("#txtendDate").val() == "" || window.rdovalue == "") {
                    alert("入力内容を確認してください");
                }
                else {

                }
            })
        });

        function BindData(data) {
            for (var i = 0; i < data.length; i++) {
                $('#tblConstruction > tbody:last-child').append('<tr><td><input type="radio" class="' + i + '" name="name_select_one" id="' + data[i].member_id + '" value="' + data[i].member_id + '" onchange="rdoChange("' + data[i].member_id + '")" />   ' + data[i].member_name + '</td></tr>');
            }
            $('.0').focus(); $('.0').attr("tabindex", 1);
        }

        function rdoChange(id) {
            window.rdovalue = id;
        }
    </script>
}