
@{
    ViewBag.Title = "DailyReportEntry";
    Layout = "~/Views/Shared/_DRMSLayout.cshtml";
}

<div class="container">
    <div class="container">
        <div class="wrapper">
            <form action="" method="post" name="ReportEntry_Form" class="form-signin">
